---
import content from '~/content/featured-card.json';
import EmptyLayout from '@/layouts/EmptyLayout.astro';
import FeaturedCard from '@/components/FeaturedCard/FeaturedCard.astro';
---

<EmptyLayout title="Launchpad">
  <ul>
    <FeaturedCard
      title={content.about.title}
      href={content.about.href}
      icon={content.about.icon}
      color={content.about.color}
    />
    <FeaturedCard
      title={content.places.title}
      href={content.places.href}
      icon={content.places.icon}
      color={content.places.color}
    />
    <FeaturedCard
      title={content.blackDesertMarket.title}
      href={content.blackDesertMarket.href}
      icon={content.blackDesertMarket.icon}
      color={content.blackDesertMarket.color}
    />
    <FeaturedCard
      title={content.simpleFacebookCustomizer.title}
      href={content.simpleFacebookCustomizer.href}
      icon={content.simpleFacebookCustomizer.icon}
      color={content.simpleFacebookCustomizer.color}
    />
    <FeaturedCard
      title={content.empty.title}
      href={content.empty.href}
      icon={content.empty.icon}
      color={content.empty.color}
    />
    <FeaturedCard
      title={content.more.title}
      href={content.more.href}
      icon={content.more.icon}
      color={content.more.color}
    />
  </ul>
</EmptyLayout>

<style>
  html.is-animating {
    overflow: hidden;
  }

  ul {
    display: grid;
    grid-auto-rows: 1fr;
    grid-template-columns: var(--FEATURED_CARD_GRID);
    gap: var(--FEATURED_CARD_MARGIN);
    padding: var(--FEATURED_CARD_MARGIN);
    min-height: 100vh;
    margin: 0;
  }
</style>
