---
export interface Props {
  name: string;
  class?: string;
  style?: object;
}

const { name, class: className, style } = Astro.props;

const { default: icon } = await import(`../../../node_modules/ionicons/dist/ionicons/svg/${name}.svg?raw`);
---

<span set:html={icon} class:list={className} style={style} />
