---
export interface Props {
  src: string;
  alt: string;
  caption?: string;
  aspectRatio?: string;
}

const { src, alt, caption, aspectRatio } = Astro.props;
---

<figure>
  <img src={src} alt={alt} class="image" style={{ aspectRatio: aspectRatio }} />
  {caption && <figcaption>{caption}</figcaption>}
</figure>

<style>
  figure {
    margin-block: 2em;
    margin-inline: 0;
  }

  figure img {
    display: block;
  }

  figure figcaption {
    font-style: italic;
    text-align: center;
    margin-top: 0.33em;
  }
</style>
