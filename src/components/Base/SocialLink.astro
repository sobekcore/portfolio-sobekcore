---
import { getEntryBySlug } from 'astro:content';
import IonIcon from '@/components/Base/IonIcon.astro';

export interface Props {
  name: string;
}

const { name } = Astro.props;

const content = await getEntryBySlug('socials', name);

if (!content) {
  throw new TypeError(`No such entry "${name}" exists in content collection "socials"`);
}
---

<a href={content.data.href} target={content.data.external ? '_blank' : '_self'} class="link">
  <IonIcon name={content.data.icon} class="icon" />
  <span>{content.data.title}</span>
</a>

<style>
  a {
    align-items: center;
    column-gap: 0.75rem;
  }

  a .icon {
    font-size: 1.5rem;
  }
</style>
