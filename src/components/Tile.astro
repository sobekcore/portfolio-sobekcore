---
export interface Props {
	title: string;
	href: string;
}

const { title, href } = Astro.props;
---

<li>
	<a href={href}>
		<h1>{title}</h1>
	</a>
</li>

<style>
li {
  list-style: none;
	height: 100%;
}

li a {
	display: flex;
	height: 100%;
	text-decoration: none;
}

li a:hover {
	background: lightgray;
}

li a:focus-visible {
	background: gray;
	outline: none;
}

li a h1 {
  color: black;
	margin: auto;
}
</style>
