---
export interface Props {
  color: string;
  class?: string;
}

const { color, class: className } = Astro.props;
---

<div class:list={className} style={{ background: color }}></div>

<style>
  div {
    position: absolute;
    inset: 0;
    border-radius: inherit;
    opacity: 15%;
  }
</style>
