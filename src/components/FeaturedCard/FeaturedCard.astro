---
import FeaturedCardIcon from '@/components/FeaturedCard/FeaturedCardIcon.astro';
import FeaturedCardBackground from './FeaturedCardBackground.astro';
import FeaturedCardTitle from './FeaturedCardTitle.astro';

export interface Props {
  title: string;
  href: string;
  icon: string;
  color: string;
}

const { title, href, icon, color } = Astro.props;
---

<li>
  <a href={href}>
    <FeaturedCardBackground color={color} />
    <FeaturedCardIcon icon={icon} color={color} class="icon" />
    <FeaturedCardTitle title={title} class="title" />
  </a>
</li>

<style>
  li {
    list-style: none;
  }

  li a {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    height: 100%;
    padding: var(--FEATURED_CARD_PADDING);
    border-radius: 0.25rem;
    text-decoration: none;
    box-shadow: rgba(0, 0, 0, 6%) 0 0.125rem 0.25rem, rgba(0, 0, 0, 5%) 0 0.05rem 0.1rem;
    transition: all 0.3s ease-out;
  }

  li a:hover,
  li a:focus-visible {
    box-shadow: rgba(0, 0, 0, 22%) 0 1.25rem 2.5rem, rgba(0, 0, 0, 18%) 0 0.25rem 0.75rem;
    transform: translateY(-0.2rem);
  }

  li a .icon {
    position: absolute;
    transform: translate(-50%, -50%);
    left: 50%;
    top: 50%;
  }

  li a .title {
    text-align: center;
    z-index: var(--FEATURED_CARD_TITLE_Z-INDEX);
  }
</style>
