---
import MaterialIcon from '@/components/Base/MaterialIcon.astro';

const TYPE_MUI = 'mui';
const TYPE_FILE = 'file';

export interface Props {
  icon: string;
  color: string;
  class?: string;
}

const { icon, color, class: className } = Astro.props;

const [type, src] = icon.split(':');
---

{type === TYPE_MUI && <MaterialIcon name={src} class={`icon ${className}`} style={{ color: color }} />}
{type === TYPE_FILE && <img src={src} class:list={['icon', 'file', className]} />}

<style>
  .icon {
    opacity: 0.3;
  }

  .icon.material-icons {
    font-size: 8rem;
  }

  .icon.file {
    height: 8rem;
    width: 8rem;
  }
</style>
