---
import FeaturedCardIcon from '@/components/FeaturedCard/FeaturedCardIcon.astro';
import ContentLinks from '@/components/Content/ContentLinks.astro';

export interface Props {
  title: string;
  icon: string;
}

const { title, icon } = Astro.props;
---

<section>
  <div class="title">
    <FeaturedCardIcon icon={icon} class="icon" />
    <h3>{title}</h3>
  </div>
  <ContentLinks class="links">
    <slot />
  </ContentLinks>
</section>

<style>
  section {
    border-left: 2px solid rgb(var(--TEXT_COLOR));
    padding-left: 1rem;
    margin-bottom: 1.5rem;
  }

  section .title {
    display: flex;
    align-items: center;
    column-gap: 1rem;
  }

  section .title .icon {
    height: 2rem;
    width: 2rem;
  }

  section .title h3 {
    font-size: 1rem;
    margin: 0;
  }

  section .links {
    margin-block: 0.75em;
  }
</style>
