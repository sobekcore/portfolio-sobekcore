---
import BaseLayout from '@/layouts/BaseLayout.astro';
import FeaturedCardBackground from '@/components/FeaturedCard/FeaturedCardBackground.astro';
import ContentNavigation from '@/components/Content/ContentNavigation.astro';

export interface Props {
  title: string;
  color: string;
}

const { title, color } = Astro.props;
---

<BaseLayout title={title}>
  <section>
    <FeaturedCardBackground color={color} class="background" />
    <ContentNavigation />
  </section>
  <main>
    <slot />
  </main>
</BaseLayout>

<style>
  section {
    position: sticky;
    top: 0;
    margin-bottom: var(--FEATURED_CARD_MARGIN);
    background: rgba(var(--BACKGROUND_COLOR), 0.65);
    box-shadow: 0 0.25rem 0.5rem rgba(var(--SHADOW_COLOR), 40%);
    backdrop-filter: blur(0.25rem);
    z-index: var(--CONTENT_NAVIGATION_Z-INDEX);
  }

  main {
    max-width: var(--CONTENT_WIDTH);
    padding-left: var(--FEATURED_CARD_MARGIN);
    padding-right: var(--FEATURED_CARD_MARGIN);
    margin-left: auto;
    margin-right: auto;
  }
</style>
